<script>
        // Client-side validation
        document.getElementById('evaluation-form').addEventListener('submit', (e) => {
            const inputs = document.querySelectorAll('.eval-input');
            let isValid = true;
            
            inputs.forEach(input => {
                input.style.borderColor = '';
                const value = input.value.trim();
                
                if (value === '' || isNaN(value) || value < 0 || value > 10) {
                    input.style.borderColor = 'red';
                    isValid = false;
                }
            });
            
            if (!isValid) {
                e.preventDefault();
                document.getElementById('serverError').innerHTML = 
                    '<strong>Error:</strong> Please fill all ratings correctly (0-10)';
                document.getElementById('serverError').style.display = 'block';
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        });

        // Keyboard navigation
        document.querySelectorAll('.eval-input').forEach((input, idx, arr) => {
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    if (idx < arr.length - 1) {
                        arr[idx + 1].focus();
                    }
                }
            });
        });
    </script>
